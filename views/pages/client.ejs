<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css"/>
        <script src="https://unpkg.com/htmx.org@2.0.1"></script>
        <script src="https://unpkg.com/htmx-ext-sse@2.2.1/sse.js"></script>
        <script src="https://cdn.tailwindcss.com"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/qrcodejs/1.0.0/qrcode.min.js"></script>
        <title>WA-BOT</title>
    </head>
    <body class="bg-emerald-950 text-white">
        <%- include('comps/navbar.ejs', { selected: 'client' }) %>
        <main class="container p-4 mx-auto">
            <div class="flex flex-col justify-center items-center gap-4">
                <%- include('comps/status.ejs', { status: undefined }) %>
                <%- include('comps/load-qrcode.ejs') %>
                <button class="px-2 py-1 rounded-xl bg-emerald-800"
                    hx-post="/client/disconnect"
                    hx-disabled-elt
                >
                    <i class="htmx-indicator fa-spinner fa-solid animate-spin"></i>
                    Disconnect
                    <i class="opacity-0 fa-spinner fa-solid"></i>
                </button>
            </div>
        </main>
    </body>
    <style>
        .indicator {
            display:none;
        }
        .htmx-request.indicator {
            display:block;
        }
        .htmx-request .indicator {
            display:block;
        }
    }
    </style>
    <script src="/htmx-event-handlers.js"></script>
</html>
