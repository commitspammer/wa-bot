<!doctype html>
<div class="space-y-2">
    <% if (messages.length === 0) { %>
        <div class="text-center">
            There are no messages. Click [+] to create one.
        </div>
    <% } else { %>
        <% for (m of messages.reverse()) { %>
            <div class="flex">
                <!-- shout-out to 'contents' for being the MVP -->
                <div class="contents"
                    hx-ext="sse"
                    sse-connect="/messages/<%= m.id %>/events"
                    sse-swap="current-status,status-changed"
                >
                </div>
                <div class="flex-1">
                    <%- include('comps/message.ejs', { message: m }) %>
                </div>
            </div>
        <% } %>
    <% } %>
    <style>
        .fix-dimensions {
            writing-mode: vertical-rl;
        }
    </style>
</div>
